{
    "manifest_version": 2,
    "name": "Read Articles",
    "version": "1.0.1",
    "description": "Stay on home page then start reading! It will iterate all links and auto scroll down to show you the article!",
    "permissions": [
        "https://www.google.com/*", 
        "https://www.scmp.com/*", 
        "https://www.sina.com.cn/*", 
        "https://www.nytimes.com/*", 
        "https://www.xuexi.cn/*", 
        "https://www.theguardian.com/*",
        "activeTab"
    ],
    "browser_action": {
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": true
    }
}
